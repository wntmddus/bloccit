<h2>Sign up Confirmation</h2>
<div class="row">
  <div class="col-md-4">
    <h4>Are you sure these values are correct?</h4>
    <h5>Email</h5> <%= @user.email %></h5>
    <h5>Name</h5> <%= @user.name %></h5>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <%= button_to "Yes", {controller: "users", action: "create", params: params}, class: 'btn btn-success' %>
  </div>
  <div class="col-md-4">
    <%= button_to "No", {controller: "users", action: "new"}, class: 'btn btn-failure' %>
  </div>
</div>
